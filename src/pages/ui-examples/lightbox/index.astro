  <a
    class="button"
    href={`${import.meta.env.BASE_URL}ui-examples/lightbox/index.html`}
    >View Lightbox v2</a
  >
  <a
    class="button"
    href={`${import.meta.env.BASE_URL}ui-examples/photoswipe/index.html`}
    >PhotoSwipe example</a
  >
</Layout>
